{
  "name": "document-conversion-mcp",
  "version": "1.0.2",
  "description": "MCP server for document format conversion",
  "main": "src/index.js",
  "bin": {
    "document-conversion-mcp": "mcp-tools.js"
  },
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node test.js",
    "example": "node examples/example-usage.js",
    "example-tools": "node examples/unified-tools-example.js",
    "install-deps": "node install.js",
    "server": "node start.js",
    "tools": "node mcp-tools.js",
    "tools-dev": "node --watch mcp-tools.js",
    "test-tools": "node test-unified-tools.js",
    "launch": "npx document-conversion-mcp",
    "deploy-check": "node deploy-check.js",
    "prepublishOnly": "npm run test && npm run deploy-check",
    "postinstall": "echo '✅ Document Conversion MCP 安装完成！使用 npx document-conversion-mcp 启动服务'"
  },
  "keywords": [
    "mcp",
    "document",
    "conversion",
    "pdf",
    "word",
    "excel",
    "powerpoint",
    "markdown"
  ],
  "author": "Document Conversion MCP",
  "license": "MIT",
  "homepage": "https://github.com/renjismzy/Document-conversion",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/renjismzy/Document-conversion.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "docx": "^9.5.1",
    "mammoth": "^1.6.0",
    "marked": "^12.0.0",
    "mime-types": "^2.1.35",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.1.1",
    "puppeteer": "^21.11.0",
    "sharp": "^0.33.2",
    "turndown": "^7.1.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "mcp-tools.js",
    "mcp-config.json",
    "mcp-http-sse.json",
    "examples/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
